#!/bin/bash
# postinst script for mypackage
#
# see: dh_installdeb(1)

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package
if [ -e confmodule ]; then
        . confmodule
else
        . /usr/share/debconf/confmodule
fi

LOCALRC=/opt/stack/devstack/localrc
writerc(){
   NAME=$1
   grep $NAME $LOCALRC > /dev/null  && return
   TEMP_NAME=`echo $NAME | tr \[A-Z\] \[a-z\]`
   db_get "openstack/${TEMP_NAME}" || return
   if [ "$RET" != ""  ];then
       RET=`echo $RET|sed 's/ //g'`
       echo "$NAME=$RET" >> $LOCALRC
   fi
}

VALIABLES="ENABLED_SERVICES,SERVICE_PASSWORD,GLANCE_HOST,KEYSTONE_HOST,SERVICE_HOST,SERVICE_PASSWORD,ADMIN_PASSWORD,MYSQL_USER,MYSQL_PASSWORD,RABBIT_USER,RABBIT_PASSWORD,LIBVIRT_TYPE,NET_MAN,PUBLIC_INTERFACE,VLAN_INTERFACE,FIXED_RANGE,FLOATING_RANGE,SETUP_DATABASE"

case "$1" in
    configure)
       echo "#generated by openstack-installer package" >> $LOCALRC 
       for valiable in ${VALIABLES//,/ };do
           writerc $valiable
       done
       echo 'SERVICE_TOKEN=$SERVICE_PASSWORD' >> $LOCALRC     
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.



#DEBHELPER#

exit 0
